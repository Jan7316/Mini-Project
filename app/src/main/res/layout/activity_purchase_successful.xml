<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPositive"
              android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/ic_orbis_title"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/vp_info_text_size"
        android:layout_marginTop="40dp"
        android:text="You have successfully unlocked Orbis VR!"
        android:textColor="@color/colorText"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:clipToPadding="false">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you, and enjoy!"
            android:background="@null"
            android:elevation="2dp"
            android:textColor="@color/colorPositiveButton"
            android:textSize="@dimen/iw_b_text_size"
            android:onClick="confirm"
            android:id="@+id/confirm"/>
    </LinearLayout>

</LinearLayout>