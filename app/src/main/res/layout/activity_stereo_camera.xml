<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stereo_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mini.app.orbis.StereoCameraActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <TextureView
            android:id="@+id/leftView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextureView
            android:id="@+id/rightView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/c_buttons_margin_bottom">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/save"
            android:textColor="@color/colorButton"
            android:id="@+id/save"
            android:onClick="save"
            android:background="@null"
            android:layout_marginRight="@dimen/import_activity_cancel_button_margin_right"
            android:textSize="@dimen/button_font_size"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discard"
            android:textColor="@color/colorButton"
            android:id="@+id/cancel"
            android:onClick="cancel"
            android:background="@null"
            android:layout_marginRight="@dimen/import_activity_cancel_button_margin_right"
            android:textSize="@dimen/button_font_size"/>
    </LinearLayout>
</RelativeLayout>
