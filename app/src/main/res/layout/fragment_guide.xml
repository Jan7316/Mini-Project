<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/gallery_item_width"
    android:layout_height="wrap_content"
    tools:context="mini.app.orbis.GuideFragment"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="6dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/orbis_logo"
            android:id="@+id/image"/> <!-- All images need to have the same aspect ratio -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3D Photography"
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/title"
            android:textColor="@color/colorText"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
